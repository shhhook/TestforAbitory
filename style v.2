body>div:first-child{
    height: 150px;
    padding: 20px;
    box-shadow: 3px 3px 3px black;
    margin: 10px 0 0 10px;
    display: flex;
    justify-content: space-around;
}

body>div:nth-child(2){
    height: 150px;
    padding: 20px;
    box-shadow: 3px 3px 3px black;
    margin: 10px 0 0 10px;
    display: flex;
    justify-content: space-between;

}

body>div:nth-child(2)>div{
    width: 20%;
    border-right: black groove 3px;
    border-left: black groove 3px;
    padding: 7px;
    margin: 10px 0 0 10px;
}

body>div:nth-child(2)>div:last-child{
    width: 80%;
    margin: 10px 0 0 10px;
}
body>div:nth-child(2)>div:first-child{
    width: 20%;
}
body>div:nth-child(2)>div:first-child>div{
    margin: auto;
    padding: 2px 0;
    text-align: center;
    font-weight: 600;
    height: 30%;
    width: 90%;
}

body>div:nth-child(2)>div:first-child>div:first-child{
    border-bottom: 2px solid black;
}

body>div:nth-child(2)>div:first-child>div:last-child{
    border-top: 2px solid black;
}
body>div:hover{
    border-left: solid 15px #28ffed;
    margin-left: 15px;
    transition: .3s;
}
body>div:first-child>div{
    border: 1px solid black;
}
